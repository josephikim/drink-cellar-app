{
  "name": "mixology-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.cjs",
    "build": "rm -rf dist && npm-run-all build:server build:client",
    "build:server": "webpack --mode=production --config webpack.production.js --config-name server",
    "build:client": "webpack --mode=production --config webpack.production.js --config-name client",
    "dev": "npm run lint && npm run check-types && npm run build:dev && npm-run-all --parallel start:dev-server watch:dev-client",
    "build:dev": "rm -rf dist && webpack --mode=development --config webpack.development.js --config-name server",
    "start:dev-server": "node-dev dist/server.cjs",
    "watch:dev-client": "webpack serve --open --mode=development --config webpack.development.js --config-name client",
    "pm2": "NODE_ENV=production pm2 start npm --name 'mixologyapp' -- start",
    "check-types": "tsc",
    "prettier": "prettier \"src/**/*.{ts,tsx,css}\"",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "storybook": "start-storybook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@redux-devtools/extension": "^3.2.2",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/react": "^5.3.21",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv-webpack": "^7.0.3",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.181",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.8",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@types/webpack": "^4.41.32",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.7",
    "dotenv": "^16.0.1",
    "eslint-plugin-react": "^7.26.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "node-dev": "^7.0.0",
    "react-bootstrap": "^2.2.3",
    "react-slideshow-image": "^3.7.5",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^6.0.0",
    "typescript": "^4.4.4",
    "validator": "^13.7.0",
    "webpack-dev-server": "^3.11.1"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/runtime": "^7.12.5",
    "@reduxjs/toolkit": "^1.6.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-redux": "^7.1.19",
    "@types/react-star-rating-component": "^1.4.1",
    "@types/redux-logger": "^3.0.8",
    "@types/webpack-node-externals": "^2.5.3",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^5.1.3",
    "cors": "^2.8.5",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-star-rating-component": "^1.4.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "uuid": "^8.3.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": 1,
      "@typescript-eslint/explicit-module-boundary-types": 2,
      "@typescript-eslint/ban-ts-comment": 1,
      "react/display-name": 0,
      "no-console": 1,
      "no-debugger": 1
    }
  }
}